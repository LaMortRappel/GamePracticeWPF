<Window x:Class="GamePracticeWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GamePracticeWPF"
        mc:Ignorable="d"
        Title="Smart Heist" Height="720" Width="640" ResizeMode="NoResize">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="16" FontSize="36">Welcome to Smart Heist</TextBlock>
        <TextBlock HorizontalAlignment="Center" Margin="64" FontSize="27">You'll need to go through 6 puzzle
            <LineBreak/>locks to win the game</TextBlock>
        <Button Margin="128,160,128,128" Name="btnStart" Click="btnStart_Click" FontSize="72" Width="384" Height="256">Let's Go</Button>
    </Grid>
</Window>
